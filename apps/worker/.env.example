# Postgres (Neon/Supabase) — same DB as web
DATABASE_URL=postgresql://user:pass@host:5432/solaudit?sslmode=require

# Redis (Upstash) — same instance as web
REDIS_URL=rediss://default:xxx@xxx.upstash.io:6379

# R2 Storage — same bucket as web
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=solaudit-artifacts

# Optional
GITHUB_TOKEN=
STORAGE_DIR=/tmp/solaudit-storage
WORKER_ENABLE_PROVE=false
