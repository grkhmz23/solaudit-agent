{
  "name": "solaudit-agent",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @solaudit/web dev",
    "dev:worker": "pnpm --filter @solaudit/worker dev",
    "build:packages": "pnpm --filter @solaudit/db build && pnpm --filter @solaudit/queue build && pnpm --filter @solaudit/engine build && pnpm --filter @solaudit/storage build",
    "build:web": "pnpm --filter @solaudit/web build",
    "build:worker": "pnpm --filter @solaudit/worker build",
    "build": "pnpm run build:packages && pnpm run build:web && pnpm run build:worker",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r --parallel run lint",
    "format": "prettier --write .",
    "db:generate": "pnpm --filter @solaudit/db generate",
    "db:migrate": "pnpm --filter @solaudit/db migrate",
    "db:migrate:deploy": "pnpm --filter @solaudit/db migrate:deploy",
    "db:seed": "pnpm --filter @solaudit/db seed",
    "test": "pnpm -r test",
    "worker:start": "cd apps/worker && node dist/index.js"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  }
}
