run = "npm install -g pnpm && pnpm install && pnpm run build:packages && pnpm run build:worker && cd apps/web && pnpm run build && cd ../.. && node start.js"
entrypoint = "start.js"
modules = ["nodejs-20"]
[nix]
channel = "stable-24_05"
packages = ["psmisc"]
[deployment]
run = ["node", "start.js"]
build = ["bash", "scripts/build.sh"]
deploymentTarget = "autoscale"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace/apps/web && npx next dev -p 5000 -H 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
