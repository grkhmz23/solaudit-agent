run = "npm install -g pnpm && pnpm install && pnpm run build:packages && pnpm run build:worker && cd apps/web && pnpm run build && cd ../.. && node start.js"
entrypoint = "start.js"
modules = ["nodejs-20", "python-3.11"]
[nix]
channel = "stable-24_05"
packages = ["psmisc", "zip", "unzipNLS"]
[deployment]
run = ["node", "start.js"]
build = ["bash", "scripts/build.sh"]
deploymentTarget = "autoscale"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5555
externalPort = 3000

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node /home/runner/workspace/start.js"
waitForPort = 5000
